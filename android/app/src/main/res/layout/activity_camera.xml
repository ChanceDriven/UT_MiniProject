<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/camera_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="0dp"
    app:layout_constraintTop_toTopOf="@+id/editText4"
    tools:context="com.example.cobalt.CameraActivity"
    tools:layout_editor_absoluteX="0dp">

    <com.example.cobalt.AutoFitTextureView
        android:id="@+id/texture"
        android:layout_width="347dp"
        android:layout_height="280dp"
        android:layout_above="@+id/editText4"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />


    Button
    android:id="@+id/take_picture"
    android:layout_width="88dp"
    android:layout_height="72dp"
    android:layout_marginLeft="34dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="17dp"
    android:text="Take Picture"
    app:layout_constraintHorizontal_bias="0.292"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toLeftOf="@+id/toggleButton"
    app:layout_constraintTop_toBottomOf="@+id/camera_preview"
    tools:text="Take Picture" />

    <Button
        android:id="@+id/camera_streams_button"
        android:layout_width="288dp"
        android:layout_height="53dp"
        android:layout_marginTop="8dp"
        android:onClick="backToStreams"
        android:text="Streams"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/take_picture" />

    <Button
        android:id="@+id/take_picture"
        android:layout_width="95dp"
        android:layout_height="65dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="17dp"
        android:text="Take Picture"
        app:layout_constraintHorizontal_bias="0.109"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/texture" />

    <ToggleButton
        android:id="@+id/toggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="ToggleButton"
        app:layout_constraintHorizontal_bias="0.775"
        app:layout_constraintLeft_toRightOf="@+id/take_picture"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/take_picture" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="174dp"
        android:layout_height="31dp"
        android:layout_marginTop="16dp"
        android:text="Connexus"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.501" />

</android.support.constraint.ConstraintLayout>
